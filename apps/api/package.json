{
    "name": "dodzo-web-backend",
    "version": "1.0.0",
    "description": "",
    "author": "yolona-oss",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "db:fresh": "node -r ./apps/api/register-paths.js node_modules/.bin/mikro-orm migration:fresh",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "cross-env NODE_ENV=dev nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@dodzo-web/shared": "0.2.0",
        "@mikro-orm/cli": "^6.5.9",
        "@mikro-orm/core": "^6.5.9",
        "@mikro-orm/migrations": "^6.5.9",
        "@mikro-orm/nestjs": "^6.1.1",
        "@mikro-orm/postgresql": "^6.5.9",
        "@nestjs/axios": "^4.0.1",
        "@nestjs/common": "^11.1.5",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.5",
        "@nestjs/event-emitter": "^3.0.1",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/mongoose": "^11.0.3",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.5",
        "@nestjs/platform-socket.io": "^11.1.8",
        "@nestjs/schedule": "^6.0.1",
        "@nestjs/schematics": "^11.0.5",
        "@nestjs/serve-static": "^5.0.3",
        "@nestjs/swagger": "^11.2.0",
        "@nestjs/throttler": "^6.4.0",
        "@nestjs/websockets": "^11.1.8",
        "axios": "^1.11.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cloudinary": "^2.7.0",
        "compression": "^1.8.1",
        "cookie-parser": "^1.4.7",
        "cross-env": "^7.0.3",
        "crypto-js": "^4.2.0",
        "dotenv": "^17.2.0",
        "helmet": "^8.1.0",
        "human-signals": "^8.0.1",
        "ioredis": "^5.8.2",
        "mongoose": "^8.16.4",
        "mysql2": "^3.14.3",
        "nodemailer": "^7.0.5",
        "redlock": "^5.0.0-beta.2",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "rrule": "^2.8.1",
        "rxjs": "^7.8.2",
        "socket.io": "^4.8.1",
        "sqlite3": "^5.1.7",
        "stripe": "^18.3.0",
        "uuid": "^13.0.0",
        "vercel": "^44.5.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.7",
        "@types/compression": "^1.8.1",
        "@types/cookie-parser": "^1.4.9",
        "@types/crypto-js": "^4.2.2",
        "@types/express": "^5.0.3",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.1.0",
        "@types/nodemailer": "^6.4.17",
        "@types/stripe": "^8.0.416",
        "source-map-support": "^0.5.21",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/mikro-orm.config.ts"
        ]
    }
}
